<?xml version="1.0" encoding="utf-8"?>

<odoo>

    <record id="view_hospital_doctor_form" model="ir.ui.view">
        <field name="name">hospital.doctor.form</field>
        <field name="model">hospital.doctor</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="spec"/>
                        <field name="gender"/>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="message_ids" options="{'post_refresh': 'recipients'}"/>
                </div>
            </form>
        </field>
    </record>


    <record id="view_hospital_doctor_tree" model="ir.ui.view">
        <field name="name">hospital.doctor.tree</field>
        <field name="model">hospital.doctor</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="spec"/>
                <field name="gender"/>
            </tree>
        </field>
    </record>

    <!-- search view-->

    <record id="view_hospital_doctor_search" model="ir.ui.view">
        <field name="name">hospital.doctor.search</field>
        <field name="model">hospital.doctor</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="gender"/>
                <filter name="filter_male" string="Male" domain="[('gender','=','male')]"/>
                <filter name="filter_female" string="Female" domain="[('gender','=','female')]"/>
            </search>
        </field>
    </record>


    <!--    graph view -->

    <record id="view_hospital_doctor_graph" model="ir.ui.view">
        <field name="name">hospital.doctor.graph</field>
        <field name="model">hospital.doctor</field>
        <field name="arch" type="xml">
            <graph string="fdsfds">
                <field name="gender"/>
                <field name="spec" />
            </graph>
        </field>
    </record>



    <record id="action_hospital_doctor" model="ir.actions.act_window">
        <field name="name">Doctors</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">hospital.doctor</field>
        <field name="view_mode">tree,form,search,graph</field>
    </record>

    <menuitem
            id="menu_doctors"
            name="doctors"
            parent="menu_hospital_doctors"
            action="action_hospital_doctor"
            sequence="10"/>

</odoo>